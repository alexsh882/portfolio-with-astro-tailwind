---
import Section from "@/components/Section.astro";

import { skills } from "@cv";
---

<Section title="Skills">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
    ul {
      @apply inline-flex flex-wrap gap-2;
    }

    li {
      @apply bg-gray-200 text-black border px-2 py-1 rounded-md text-sm font-medium hover:bg-gray-300;
    }
</style>